#!/bin/bash

if [ $# -ne 1 ];
then
  echo "asmlg source[.mix]"
  exit 1
fi

inp=$1

TS=$(date +%Y%m%d-%H%M%S)
echo
echo "*** $TS ASMLG TASK STARTED ************************"
echo
echo "==============================================================="
echo "  OPT.INPUT DATA: $inp.inp"
echo "    TRACE OUTPUT: $inp.tre"
echo "     PRINTER LOG: $inp.log"
echo "==============================================================="
echo

rm -f $inp.tre
rm -f $inp.log

rm -f printer

./asml $inp

if [ -s $inp.tra ];
then
  cat crld.dek $inp.tra >reader
  if [ -s $inp.inp ];
  then
    cat $inp.inp >>reader
  fi
  ./mix_ape.exe -g -y $inp.sym 2>&1 | tee $inp.tre

  if [ -s printer ];
  then
    cp printer $inp.log
  fi
else
  echo "$inp.tra not found"
fi

TS=$(date +%Y%m%d-%H%M%S)
echo
echo "*** $TS ASMLG TASK ENDED **************************"
echo
